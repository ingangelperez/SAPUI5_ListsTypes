<mvc:View controllerName="aapg.Lists.controller.ListTypes" 
          xmlns:mvc="sap.ui.core.mvc" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:layout="sap.ui.layout" 
          displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <IconTabBar id="listsTabBar">
                            <items>
                                
                                <IconTabFilter text="{i18n>objectList}">
                                    <List id="objectList"
                                           items="{ path: '/Products',
                                                    filters: [{
                                                        path: 'Brand',
                                                        operator: 'EQ',
                                                        value1: 'Compaq'
                                                    }]}">
                                        <items>
                                            <ObjectListItem title="{Material} {Brand} {Model}"
                                                            number="{Price}"
                                                            numberUnit="{Currency}"
                                                            type="Detail">
                                                <ObjectAttribute text="{Brand}"/>
                                                <ObjectAttribute text="{Weight}"/>
                                            </ObjectListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>standardList}">
                                    
                                    <Select selectedKey="{/typeSelection}">
                                        <items>
                                            <core:Item key="None" text="{i18n>modeNone}"/>
                                            <core:Item key="SingleSelect" text="{i18n>modeSingleSelect}"/>
                                            <core:Item key="SingleSelectLeft" text="{i18n>modeSingleSelectLeft}"/>
                                            <core:Item key="SingleSelectMaster" text="{i18n>modeSingleSelectMaster}"/>
                                            <core:Item key="MultiSelect" text="{i18n>modeMultiSelect}"/>
                                        </items>
                                    </Select>

                                    <Button text="{i18n>showSelectedItems}" 
                                            press=".onShowSelectedRow"
                                            class="sapUiTinyMarginBegin"/>
                                    
                                    <Button text="{i18n>deleteSelectedItems}" 
                                            press=".onDeleteSelectedRow"
                                            class="sapUiTinyMarginBegin"/>
                                    
                                    <List id="standardList"
                                           items="{path: '/Products',
                                                   sorter: {
                                                       path: 'Brand',
                                                       descending: false,
                                                       group: true
                                                   },
                                                   groupHeaderFactory: '.getGroupHeader'}"
                                            mode="{/typeSelection}">
                                        <items>
                                            <StandardListItem title="{Material} {Brand} {Model}"
                                                              description="{Weight}"
                                                              info="{Price} {Currency}"
                                                              type="Active"/>
                                        </items>
                                    </List>

                                </IconTabFilter>

                                <IconTabFilter text="{i18n>inputList}">
                                    <List id="inputList"
                                           items="{/Products}"
                                           mode="Delete"
                                           delete=".onDeleteRow">
                                        <items>
                                            <InputListItem label="{Brand}">
                                                <Select items="{Properties}">
                                                    <core:Item key="{Id}" text="{Text}"/>
                                                </Select>
                                            </InputListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>notificationList}">
                                    <List id="notificationList"
                                           items="{/News}">
                                        <items>
                                            <NotificationListItem title="{Title}"
                                                                  description="{Description}"
                                                                  unread="{Unread}"
                                                                  authorName="{Author}"
                                                                  priority="{Priority}"
                                                                  showCloseButton="{ShowCloseButton}"/>
                                        </items>
                                    </List>
                                </IconTabFilter>

                                <IconTabFilter text="{i18n>customList}">
                                    <List id="customList"
                                           items="{/News}">
                                        <items>
                                            <CustomListItem>
                                                <layout:Grid defaultSpan="XL3 L3 M6 S12">
                                                    <Text text="{Title}"/>
                                                    <Text text="{Author}"/>
                                                    <Text text="{Description}"/>
                                                </layout:Grid>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                </IconTabFilter>

                            </items>
                        </IconTabBar>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
